# docker rmi dragon-framework-py_django:1.0.0                                                                            #
# docker rmi 10.10.10.10:18080/freeimage/dragon-framework-py_django:1.0.0                                                #
# docker push 10.10.10.10:18080/freeimage/dragon-framework-py_django:1.0.0                                               #
# docker pull 10.10.10.10:18080/freeimage/dragon-framework-py_django:1.0.0                                               #
# docker save -o dragon-framework-py_django.1.0.0.tar.gz 10.10.10.10:18080/freeimage/dragon-framework-py_django:1.0.0     #
# docker load < dragon-framework-py_django.1.0.0.tar.gz                                                                  #

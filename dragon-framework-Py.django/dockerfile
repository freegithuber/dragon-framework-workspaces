FROM python:3.8.18-alpine3.18

ENV PORT=8000 WORKERS=4

EXPOSE ${PORT}

WORKDIR /var/dragon-framework-Py_django/web/

ENV PYTHONPATH=..:$PYTHONPATH

COPY web                 /var/dragon-framework-Py_django/web
COPY requirements.txt    /var/dragon-framework-Py_django/requirements.txt
COPY version.txt         /var/dragon-framework-Py_django/version.txt

RUN set -x \
 && sed -i 's/dl-cdn.alpinelinux.org/mirrors.aliyun.com/g' /etc/apk/repositories \
 && mkdir ~/.pip \
 && echo '[global]' >> ~/.pip/pip.conf \
 && echo 'cache-dir=/var/repositories/python/pip' >> ~/.pip/pip.conf \
 && echo 'index-url=http://mirrors.aliyun.com/pypi/simple/' >> ~/.pip/pip.conf \
 && echo '[install]' >> ~/.pip/pip.conf \
 && echo 'trusted-host=mirrors.aliyun.com' >> ~/.pip/pip.conf

RUN set -x \
 && apk add --no-cache tzdata \
 && ln -sf /usr/share/zoneinfo/Asia/Shanghai /etc/localtime \
 && rm -rf /opt/* /tmp/* /var/cache/apk/*

RUN set -x \
 && apk add --no-cache --virtual build-deps make gcc g++ \
 && python -m pip install --upgrade pip==22.1.2 \
 && pip install --upgrade setuptools==56.2.0 \
 && pip install gunicorn==20.1.0 \
 && cd /var/dragon-framework-Py_django/ \
 && pip install -r requirements.txt \
 && apk del build-deps \
 && rm -rf /opt/* /tmp/* /var/cache/apk/*

CMD gunicorn --config gunicorn_config.py --workers ${WORKERS} --bind 0.0.0.0:${PORT} webapp.wsgi
